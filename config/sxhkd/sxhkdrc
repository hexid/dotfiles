super + Return
	st

super + e
	pcmanfm

super + o
	dmenu_run -sb "$_xrdb_color4" -sf "$_xrdb_background" -fn "$_xrdb_font"
super + shift + {_, ctrl + }{o,t}
	wardedmenu { ,-w work }{ ,-T 'TOTP: ' }-- -sb "$_xrdb_color4" -sf "$_xrdb_background" -fn "$_xrdb_font"

super + Escape
	slock

XF86TouchpadToggle
	touchpad-toggle.sh

XF86Audio{Play,Prev,Next}
	media-ctl.sh {play,prev,next}

XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
	volume-adjust.sh {down,up,mute,micmute}

XF86MonBrightness{Down,Up}
	xbacklight -{dec,inc} 5

super + XF86AudioMute
	pavucontrol

super + F1
	monitor-toggle.sh

#super + F2
#	network-restart.sh

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd
