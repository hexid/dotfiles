super + Return
	st

super + e
	pcmanfm

super + o
	dmenu_run -sb "$_xrdb_color4" -sf "$_xrdb_background" -fn "$_xrdb_font"
super + shift + {_, ctrl + }{o,t}
	wardedmenu { ,-w work }{ ,-O 'OTP: ' }-- -sb "$_xrdb_color4" -sf "$_xrdb_background" -fn "$_xrdb_font"

super + Escape
	slock

XF86TouchpadToggle
	touchpad-toggle.sh

XF86Audio{Play,Prev,Next}
	media-ctl.sh {play,prev,next}

XF86Audio{LowerVolume,RaiseVolume,Mute,MicMute}
	volume-adjust.sh {down,up,mute,micmute}

XF86Calculator
	volume-adjust.sh micmute

XF86MonBrightness{Down,Up}
	brightnessctl set {5%-,+5%}

Print
	maim -u --nodecorations=1 "$HOME/documents/screenshots/$(date -u +'%Y-%m-%d-%H%M%S').png"
ctrl + Print
	maim -s -u --nodecorations=1 "$HOME/documents/screenshots/$(date -u +'%Y-%m-%d-%H%M%S').png"

super + XF86AudioMute
	pavucontrol

super + F1
	monitor-toggle.sh

#super + F2
#	network-restart.sh

super + F4
	windowunmap.sh

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd
