[user]
	name = hexid
	email = nick.currier@gmail.com
[credential]
	helper = cache --timeout=3600
[diff]
	tool = vimdiff
[difftool "vimdiff"]
	path = nvim
[init]
	defaultBranch = main
[merge]
	tool = vimdiff
[mergetool "vimdiff"]
	path = nvim
[push]
	default = simple
[pull]
	ff = only
[pager]
	status = true
[alias]
	aliases = "!git config -l | grep alias | cut -c 7-"
	amend = commit --amend
	branch-name = rev-parse --abbrev-ref HEAD
	diffc = diff --cached
	find = "!git ls-files | grep --color -i"
	graph = log --all --decorate --oneline --graph
	mr = push -o merge_request.create -o merge_request.remove_source_branch
	publish = "!git push -u origin $(git branch-name)"
	mr-publish = "!git mr -u origin $(git branch-name)"
	st = status
	unstash = "!git stash show -p | git apply -3 && git stash drop"

	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
